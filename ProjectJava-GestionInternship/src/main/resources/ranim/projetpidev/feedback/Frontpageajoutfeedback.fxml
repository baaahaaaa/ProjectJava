<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@feedback.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ranim.projetpidev.controllers.feedback.FeedbackController">
    <children>
        <!-- Container centrÃ© -->
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- Card blanche avec dÃ©gradÃ© -->
            <VBox fx:id="card" alignment="TOP_LEFT" spacing="15" styleClass="card">

                <!-- Titre -->
                <Label styleClass="title" text="ðŸŒŸ Leave Feedback for Internship" />

                <!-- Section Rating -->
                <Label styleClass="field-label" text="Rating" />
                <Slider fx:id="ratingSlider" blockIncrement="1" majorTickUnit="1" max="5" min="1" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="rating-slider" value="3" />

                <!-- Section Comment -->
                <Label text="Comment">
               <styleClass>
                  <String fx:value="field-label" />
                  <String fx:value="title" />
               </styleClass></Label>
                <TextArea fx:id="commentField" promptText="Your thoughts..." styleClass="comment-area" wrapText="true" />

                <!-- Boutons -->
                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Button onAction="#goToInternshipDetails" text="Cancel">
                  <styleClass>
                     <String fx:value="button button-cancel" />
                     <String fx:value="button-cancel" />
                  </styleClass></Button>
                    <Button onAction="#submitFeedback" text="Submit Feedback">
                  <styleClass>
                     <String fx:value="button button-primary" />
                     <String fx:value="button-primary" />
                  </styleClass></Button>
                </HBox>

            </VBox>
        </VBox>
    </children>
</AnchorPane>
