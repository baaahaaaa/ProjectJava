<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ranim.projetpidev.controllers.candidat.FrontCandidatureController"
            stylesheets="@candidat.css">
    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.topAnchor="0"   AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"  AnchorPane.rightAnchor="0"
              styleClass="message-card message-error">
            <Label text="❌ Candidature Refusée" styleClass="message-icon"/>
            <Label text="Nous sommes désolés, votre candidature n’a pas été retenue." styleClass="message-text"/>
            <Button fx:id="backBtn"
                    text="Retour"
                    onAction="#backToList"
                    styleClass="button button-back"/>
        </VBox>
    </children>
</AnchorPane>
