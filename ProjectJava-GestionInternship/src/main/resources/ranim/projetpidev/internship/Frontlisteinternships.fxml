<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane stylesheets="@frontend.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ranim.projetpidev.controllers.internship.FrontlisteinternshipsController">
    <!-- Navbar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="navbar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <TextField fx:id="searchField" prefWidth="300" promptText="Rechercher un stage..." stylesheets="@frontend.css" />
            <Button onAction="#handleSearch" stylesheets="@frontend.css" text="Filtrer" />
        </HBox>
    </top>
    <!-- Zone d'affichage des cards -->
    <center>
        <FlowPane fx:id="cardsContainer" hgap="15" styleClass="cards-container" stylesheets="@frontend.css" vgap="15">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </FlowPane>
    </center>
    <!-- Footer avec pagination -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="pagination">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Button fx:id="previousButton" onAction="#handlePagination" text="Précédent" />
            <Button fx:id="nextButton" onAction="#handlePagination" text="Suivant" />
        </HBox>
    </bottom>
</BorderPane>
