<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ranim.projetpidev.controllers.CourseController" spacing="10.0" stylesheets="@css/application.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Add Course" onAction="#handleCreateCourse" styleClass="primary-button"/>
    </HBox>
    <TableView fx:id="courseTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
            <TableColumn fx:id="domainColumn" text="Domain" prefWidth="100"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="80"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
            <TableColumn fx:id="creationDateColumn" text="Creation Date" prefWidth="120"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
</VBox> 