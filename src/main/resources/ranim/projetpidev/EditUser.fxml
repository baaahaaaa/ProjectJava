<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/javafx" fx:controller="ranim.projetpidev.controllers.EditUserController" prefWidth="600" prefHeight="500" stylesheets="@css/EditUser.css">
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="30">
        <Label text="✏ Modifier Utilisateur" style="-fx-font-size: 18px;"/>

        <TextField fx:id="firstNameField" promptText="Prénom"/>
        <TextField fx:id="lastNameField" promptText="Nom"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Mot de passe"/>
        <DatePicker fx:id="entryDatePicker"/>
        <ChoiceBox fx:id="typeChoiceBox"/>

        <TextField fx:id="companyField" promptText="Nom de la société (Agent)"/>
        <TextField fx:id="locationField" promptText="Lieu (Agent)"/>
        <TextField fx:id="domainField" promptText="Domaine (Tutor)"/>

        <HBox spacing="10">
            <Button text="💾 Enregistrer" onAction="#handleSave"/>
            <Button text="❌ Annuler" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
