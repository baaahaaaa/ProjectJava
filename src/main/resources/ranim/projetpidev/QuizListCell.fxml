<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ranim.projetpidev.controllers.QuizListCell"
      prefHeight="150" prefWidth="400"
      spacing="10"
      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3);">

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="descriptionLabel" style="-fx-text-fill: #555;"/>

    <HBox spacing="10">
        <Button fx:id="startButton" text="Commencer" styleClass="btn-start"/>
    </HBox>
</VBox>
