<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ranim.projetpidev.controllers.MainLayoutController"
            prefHeight="600" prefWidth="800">

    <left>
        <VBox prefWidth="200" style="-fx-background-color: #2c3e50;">
            <Label text="E-Learning Platform" 
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 20px;"
                   alignment="CENTER"/>
            
            <Separator style="-fx-background-color: white;"/>
            
            <Button text="Courses" 
                    onAction="#handleCoursesButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15px;"
                    maxWidth="Infinity"/>
            
            <Button text="Resources" 
                    onAction="#handleResourcesButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15px;"
                    maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea"/>
    </center>

</BorderPane> 