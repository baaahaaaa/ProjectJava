<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ranim.projetpidev.controllers.ForgotPasswordController" stylesheets="@css/fp.css">
    <Label text="Forgot Password" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>
    <Button text="Send Code" onAction="#handleSendCode" styleClass="button"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>
